BR2_arm=y
BR2_cortex_a7=y
BR2_GLOBAL_PATCH_DIR=""
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y
BR2_ARM_FPU_NEON_VFPV4=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_TARGET_GENERIC_HOSTNAME="rpi3"
BR2_TARGET_GENERIC_ISSUE="Welcome to Buildroot for RPi3"
BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_ROOTFS_OVERLAY=""
BR2_SYSTEM_DHCP="eth0"
BR2_ROOTFS_POST_BUILD_SCRIPT=""
BR2_ROOTFS_POST_IMAGE_SCRIPT=""
BR2_ROOTFS_USERS_TABLE=""
BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_EUDEV=y
BR2_TARGET_ENABLE_ROOT_LOGIN=y
BR2_TARGET_GENERIC_REMOUNT_ROOTFS_RW=y

# Bootloader + Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_VERSION=y
BR2_LINUX_KERNEL_CUSTOM_VERSION_VALUE="6.1.69"
BR2_LINUX_KERNEL_USE_DEFCONFIG=y
BR2_LINUX_KERNEL_DEFCONFIG="bcm2709"

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="256M"
BR2_TARGET_ROOTFS_TAR=y

# Raspberry Pi support
BR2_PACKAGE_RPI_FIRMWARE=y
BR2_PACKAGE_RPI_FIRMWARE_BOOT=y
BR2_PACKAGE_RPI_FIRMWARE_CONFIG=y
BR2_PACKAGE_RPI_FIRMWARE_START=y
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# SSH
BR2_PACKAGE_DROPBEAR=y
BR2_PACKAGE_DROPBEAR_ENABLE_REVERSE_PORT_FORWARD=y
BR2_PACKAGE_DROPBEAR_DISABLE_REVERSEDNS=y

# Networking
BR2_PACKAGE_IFUPDOWN=y
BR2_PACKAGE_DHCPDUMP=y
BR2_PACKAGE_NTP=y

# Python
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_UNICODEDATA=y

# C++
BR2_TOOLCHAIN_BUILDROOT_CXX=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y

# Image
BR2_TARGET_SDCARD=y
BR2_TARGET_SDCARD_IMAGE_SIZE="300"

# Raspberry Pi board
BR2_BOARD_NAME="raspberrypi3"
BR2_TARGET_RASPBERRYPI=y
BR2_TARGET_RASPBERRYPI_VERSION=3
BR2_TARGET_RASPBERRYPI_GENIMAGE=y

# Host packages
BR2_PACKAGE_HOST_GENIMAGE=y
BR2_PACKAGE_HOST_MTOOLS=y
BR2_PACKAGE_HOST_PARTED=y
BR2_PACKAGE_HOST_SQUASHFS=y
BR2_PACKAGE_HOST_UTIL_LINUX=y
