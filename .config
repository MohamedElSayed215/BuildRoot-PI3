# Raspberry Pi 3 base
BR2_arm=y
BR2_cortex_a7=y
BR2_ARM_FPU_NEON_VFPV4=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y
BR2_TARGET_GENERIC_HOSTNAME="rpi3"
BR2_TARGET_GENERIC_ISSUE="Welcome to Buildroot for RPi3"
BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_SYSTEM_DHCP="eth0"
BR2_TARGET_GENERIC_REMOUNT_ROOTFS_RW=y

# Kernel and Firmware
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_VERSION=y
BR2_LINUX_KERNEL_CUSTOM_VERSION_VALUE="6.1.69"
BR2_LINUX_KERNEL_USE_DEFCONFIG=y
BR2_LINUX_KERNEL_DEFCONFIG="bcm2709"
BR2_PACKAGE_RPI_FIRMWARE=y
BR2_PACKAGE_RPI_FIRMWARE_BOOT=y
BR2_PACKAGE_RPI_FIRMWARE_CONFIG=y
BR2_PACKAGE_RPI_FIRMWARE_START=y
BR2_PACKAGE_RPI_FIRMWARE_WIFI=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_TAR=y
BR2_TARGET_SDCARD=y
BR2_TARGET_SDCARD_IMAGE_SIZE="300"

# SSH
BR2_PACKAGE_DROPBEAR=y

# Networking
BR2_PACKAGE_CONNMAN=y
BR2_PACKAGE_CONNMAN_WIFI=y
BR2_PACKAGE_CONNMAN_ETHERNET=y
BR2_PACKAGE_DBUS=y
BR2_PACKAGE_WPA_SUPPLICANT=y
BR2_PACKAGE_WPA_SUPPLICANT_CLI=y
BR2_PACKAGE_WPA_SUPPLICANT_DBUS=y
BR2_PACKAGE_WPA_SUPPLICANT_PASSPHRASE=y
BR2_PACKAGE_IFUPDOWN=y

# Python
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_TKINTER=y
BR2_PACKAGE_PYTHON3_LIBGPIOD=y

# GPIO
BR2_PACKAGE_LIBGPIOD=y
BR2_PACKAGE_GPIOD=y

# GUI
BR2_PACKAGE_WESTON=y
BR2_PACKAGE_WAYLAND=y
BR2_PACKAGE_XTERM=y
BR2_PACKAGE_TCL=y
BR2_PACKAGE_TK=y
BR2_PACKAGE_LIBX11=y

# Qt GUI (optional)
BR2_PACKAGE_QT6BASE=y
BR2_PACKAGE_QT6=y
BR2_PACKAGE_QT6BASE_WIDGETS=y

# Editors
BR2_PACKAGE_NANO=y
BR2_PACKAGE_VIM=y
BR2_PACKAGE_BUSYBOX_SHOW_OTHERS=y


# pip support
BR2_PACKAGE_PYTHON3_SETUPTOOLS=y
BR2_PACKAGE_PYTHON3_PIP=y
BR2_PACKAGE_LIBSSL=y
BR2_PACKAGE_CA_CERTIFICATES=y
