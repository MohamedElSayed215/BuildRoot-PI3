BR2_arm=y
BR2_cortex_a7=y
BR2_ARM_EABIHF=y
BR2_GLOBAL_PATCH_DIR=""
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_6=y

# Toolchain
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_KERNEL_HEADERS_6_6=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y

# System
BR2_TARGET_GENERIC_HOSTNAME="raspberrypi"
BR2_TARGET_GENERIC_ISSUE="Welcome to Buildroot for Raspberry Pi 3"
BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_SYSTEM_DHCP="eth0"
BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_EUDEV=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="256M"
BR2_TARGET_ROOTFS_TAR=y

# Bootloader
BR2_TARGET_BCM283X=y
BR2_TARGET_BCM283X_BOARD="rpi3"
BR2_TARGET_BCM283X_KERNEL_CUSTOM_GIT=y
BR2_TARGET_BCM283X_KERNEL_CUSTOM_GIT_REPO_URL="https://github.com/raspberrypi/linux.git"
BR2_TARGET_BCM283X_KERNEL_CUSTOM_GIT_VERSION="rpi-6.6.y"
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="board/raspberrypi/linux.config"
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="bcm2710-rpi-3-b"

# Networking
BR2_PACKAGE_CONNMAN=y
BR2_PACKAGE_CONNMAN_CLIENT=y
BR2_PACKAGE_WPA_SUPPLICANT=y
BR2_PACKAGE_WPA_SUPPLICANT_DBUS=y
BR2_PACKAGE_WPA_SUPPLICANT_CLI=y
BR2_PACKAGE_DHCPCD=y

# Qt / Graphics
BR2_PACKAGE_QT6=y
BR2_PACKAGE_QT6_BASE_WIDGETS=y
BR2_PACKAGE_QT6_BASE_SQLITE=y
BR2_PACKAGE_QT6_BASE_NETWORK=y
BR2_PACKAGE_QT6_DEMOS=y
BR2_PACKAGE_QT6_MULTIMEDIA=y

BR2_PACKAGE_WESTON=y
BR2_PACKAGE_WESTON_DEFAULT_BACKEND="wayland"

# Python
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_PIP=y
BR2_PACKAGE_PYTHON3_SQLITE=y
BR2_PACKAGE_PYTHON3_UNICODEDATA=y
BR2_PACKAGE_PYTHON_PYGOBJECT=y

# SSH
BR2_PACKAGE_DROPBEAR=y

# Other
BR2_PACKAGE_HTOP=y
BR2_PACKAGE_NANO=y
BR2_PACKAGE_BASH=y

# DBus
BR2_PACKAGE_DBUS=y
BR2_PACKAGE_DBUS_GLIB=y

# Host tools
BR2_PACKAGE_HOST_QEMU=y
BR2_PACKAGE_HOST_GENIMAGE=y
BR2_PACKAGE_HOST_PARTED=y
BR2_PACKAGE_HOST_MTOOLS=y

# Filesystem layout
BR2_ROOTFS_POST_BUILD_SCRIPT="board/raspberrypi3/post-build.sh"
BR2_ROOTFS_POST_IMAGE_SCRIPT="board/raspberrypi3/post-image.sh"
